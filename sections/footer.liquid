<style>
footer{
  background: {{ section.settings.color_footer_bg }};
}

footer .container .footer-menu .menu-title{
  color: {{ section.settings.color_footer_text }};
}

footer .container .footer-menu li a{
  color: {{ section.settings.color_footer_link }};
}
</style>

<footer>
  <div class="container bg-mar">
    <div class="row justify-content-between">
      {% for block in section.blocks %}
      {%- assign footer_linklist = block.settings.menu -%}
      <div class="col-md-2">
        <div class="footer-menu">
          <span class="menu-title">{{ block.settings.title }}</span>
          <ul>
            {%- for link in linklists[footer_linklist].links -%}
            <li>
              <a href="{{ link.url }}">{{ link.title | escape }}</a>
            </li>
            {%- endfor -%}
          </ul>
        </div>
      </div>
      {% endfor %}
    </div>

  </div>
</footer>

