*{
  box-sizing: border-box;
}

html, body, p, a, span{
  font-family: {{ base_font.family }},'Open Sans', sans-serif;
}

p{
  color: {{ settings.color_body_text }};
}

h1, h2, h3, h4, h5, h6{
  font-family: {{ header_font.family }},'Open Sans', sans-serif;
  font-weight: {{ header_font.weight}};
  color: {{ settings.color_text }};
}


header{
  width: 100%;
}

header .store-info{
  background: rgb(92, 50, 11);
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 100%;
}

header .store-info span{
  color: {{ settings.header_info_color }};
  font-weight: 700;
}

header .store-info a{
  font-weight: 700;
  text-decoration: none;
  color: {{ settings.header_link_color }};
}
header .logo{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 20px;
}

header .logo a{
  font-family: 'Fredericka the Great', cursive;
  font-weight: 700;
  font-size: {{ settings.type_logo_size }}px;
  color: {{ settings.logo_text_color}};
}

header .shop-row{
  position: relative;
}

header .shop-row .search-bar{
  position: relative;
  left: 6px;
  display: inline-block;
  bottom: 3px;
  min-width: 100px;
}

header .shop-row .search-bar .search{

  color: rgb(92, 50, 11);
  border: 3px solid rgb(92, 50, 11);
  border-radius: 6px;
  padding-left: 30px;
  padding-top: 3px;
  width: 100%;
}

header .shop-row .search-bar .search-icon{
  position: absolute;
  top: 8px;
  left: 7px;
  width: 21px;
}

header .shop-row .profile{
  position: absolute;
  right: 20px;
  bottom: 3px;
}

header .shop-row .shopping-bag{
  position: absolute;
  right: 80px;
  bottom: 3px;
}

header .shop-row .shopping-bag .site-header__cart{
  padding: 0;
}

header .shop-row .shopping-bag .site-header__cart-count{
  right: -4px;
  top: -3px;
}

header .shop-row .shopping-bag .item-number{
  position: absolute;
  left: 11px;
  top: 15px;
  color: rgb(252, 162, 78);
  font-size: 18px;
}


nav{
  background: {{ settings.navigation_background_color }};
  width: 100%;
  padding: 3px 115px;
  height: 65px;
  line-height: 65px;
}

nav .nav-links li a{
  color: {{ settings.navigation_link_color }};
  text-decoration: none;
  font-size: 1.5rem;
  font-weight: 600;
  padding: 1rem 7rem;
}

nav .nav-links li a:hover{
  background: {{ settings.navigation_link_highlight_color }};
  transition: all 0.3s ease;
}

nav .nav-links li{
  list-style: none;
}

nav .wrapper{
  max-width: 1250px;
  padding: 0 30px;
  margin: auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  position: relative;
}

nav .wrapper .nav-links{
  display: inline-flex;
}

nav .wrapper input{
  display: none;
}

nav .mega-box{
  position: absolute;
  top: 3.8rem;
  width: 100%;
  left: 0;
  opacity: 0;
  visibility: hidden;
}

nav .nav-links li:hover .mega-box{
  top: 60px;
  opacity: 1;
  visibility: visible;
  z-index: 999;
  transition: all 0.3s ease;
}

nav .mega-box .content{
  background: {{ settings.subnav_background_color }};
  padding: 25px 20px;
  display: flex;
  width: 100%;
  justify-content: space-evenly;
  border-top: 5px solid {{ settings.subnav_bordertop_color }};
}

nav .mega-box .content .megaRow{
  width: calc(25% - 30px);
  line-height: 45px;
}

nav .mega-box .content .megaRow img{
  width: 100%;
  height: 100%;
  object-fit: cover;
}

nav .mega-box .content .megaRow span{
  color: rgb(92, 50, 11);
  font-size: 2rem;
  text-decoration: underline;
}

nav .mega-box .content .megaRow .mega-links{
  margin-left: -40px;
}

nav .mega-box .content .megaRow:nth-child(1),
nav .mega-box .content .megaRow:nth-child(2){
  border-left: 0px;
}

nav .mega-box .content .megaRow .mega-links li{
  padding: 0 20px;
}

nav .mega-box .content .megaRow .mega-links li a{
  padding: 0 20px;
  font-size: 1.3rem;
  display: block;
}

nav .wrapper .btn{
  color: rgb(92, 50, 11);
  font-size: 1.5rem;
  cursor: pointer;
  display: none;
  background-color: rgba(0,0,0,0.0);
}

nav .wrapper .cancel-btn{
  position: absolute;
  right: 30px;
  top: 10px;
}

nav .wrapper .menu-btn{
  position: absolute;
  right: 70px;
  top: 7px;
  transform:translate3d(75px,-54px,0);
}

nav .wrapper .nav-links .mobile-item{
  display: none;
}

